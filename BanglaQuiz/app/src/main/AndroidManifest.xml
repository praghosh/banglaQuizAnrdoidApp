<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BanglaQuiz"
        tools:targetApi="31">

        <activity
            android:name="com.prabir.banglaquiz.HomePageActivity"
            android:exported="true"
            android:label="@string/title_activity_main"
            android:theme="@style/Theme.BengaliQuizApp">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.prabir.banglaquiz.SubjectSelectActivity"
            android:exported="true"
            android:icon="@null"
            android:label="@string/title_activity_subject_select"
            android:parentActivityName="com.prabir.banglaquiz.HomePageActivity"
            android:theme="@style/Theme.BengaliQuizApp">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.prabir.banglaquiz.HomePageActivity" />
        </activity>

        <activity
            android:name="com.prabir.banglaquiz.QuestionActivity"
            android:exported="true"
            android:icon="@null"
            android:theme="@style/FullscreenTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.prabir.bengaliquizapp.quiz.SubjectSelectActivity" />
        </activity>
    </application>

</manifest>