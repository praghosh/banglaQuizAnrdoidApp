<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="true"><layer-list>
            <item ><shape android:innerRadiusRatio="3" android:shape="ring" android:thickness="5dp" android:useLevel="false">
                    <solid android:color="#FF8654" />
                   <size android:height="25dp" android:width="25dp" />
                </shape></item>
            <item ><shape android:shape="oval" android:useLevel="false">
                    <solid android:color="#0000FF" />
                    <stroke android:width="2dp" android:color="#FF8664" />
                    <size android:height="3dp" android:width="3dp" />
                </shape></item>
        </layer-list></item>
        
      <item    android:state_checked="false"  android:left="25dp"><shape android:innerRadiusRatio="3" android:shape="ring" android:thickness="5dp" android:useLevel="false">
            <solid android:color="#FF8654" />
            <size android:height="25dp" android:width="25dp" />
        </shape></item>
    
    <item   android:left="25dp"><shape android:innerRadiusRatio="3" android:shape="ring" android:thickness="5dp" android:useLevel="false">
            <solid android:color="#FF8654" />
            <size android:height="25dp" android:width="25dp" />
        </shape></item>

</selector>